<%- model_class = Record -%>

<div class="page-header">
  <h1>Resumen</h1>
</div>

<table class="table table-striped register-list">
  <tr>
    <td><h4>Total Diario</h4></td>
    <td><h4>$</h4></td>
    <td><h4><%= @today_total %></h4></td>
  </tr>
  <tr>
    <td><h4>Total Mensual</h4></td>
    <td><h4>$</h4></td>
    <td><h4><%= @month_total %></h4></td>
  </tr>
  <tr>
    <td><h4>Mio</h4></td>
    <td><h4>$</h4></td>
    <td><h4><%= @mine_total%></h4></td>
  </tr>
</table>

<div class="page-header">
  <span><h1>Hoy día</h1></span>
  <span>
    <a class="btn btn-large" href="<%= new_record_path%>">
    <span class="icon-white icon-plus-sign"></span><b>Nueva Atención</b></a>
  </span>
  
</div>
<table class="table table-striped register-list">
  <thead>
    <tr>
      <th><h4>Atención</h4></th>
      <th><h4>Valor</h4></th>
      <th><h4>Acciones</h4></th>
    </tr>
  </thead>
  <tbody>
    <% @today_records.each do |record| %>
      <tr>
        <td><%= record.service.name%></td>
        <td>$<%= record.service.value %></td>
        <td>
          <%= link_to 'Editar', edit_record_path(record), :class => 'btn btn-info' %>
          <%= link_to 'Eliminar',
                      record_path(record),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header">
  
</div>




