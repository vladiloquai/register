<%- model_class = Record -%>
<div class="page-header">
  <h1>Atenciones</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Atenci√≥n</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%=record.created_at.strftime("%d/%m/%Y, %H:%M") %></td>
        <td><%=record.service.name %></td>
        <td><%=record.service.value %></td>
        <td>
          <%= link_to 'Editar',
                      edit_record_path(record), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar',
                      record_path(record),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva',
            new_record_path,
            :class => 'btn btn-large' %>
