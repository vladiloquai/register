<%- model_class = Service -%>
<div class="page-header">
  <h1>Servicios Disponibles</h1>
</div>
<table class="table table-striped register-list">
  <thead>
    <tr>
      <th><h4>Id</h4></th>
      <th><h4>Nombre</h4></th>
      <th><h4>Precio</h4></th>
      <th><h4>Descripci√≥n</h4></th>
