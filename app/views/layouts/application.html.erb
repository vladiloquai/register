    <body>

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="<%= root_path%>"><%= image_tag('logo.png', :size => "60x30")%></a>
                    <div class="container nav-collapse">
                        <ul class="nav pull-right">

                            <% if user_signed_in? %>

                                <!-- Contests Menu -->
                                <% if can? :index, Contest %>
                                    <li>
                                        <%= link_to contests_path  do%>
                                            <i class="icon icon-flag-checkered"></i>
                                            <%=t('contests.index.title')%>
                                        <% end %>
                                    </li>
                                <% end %>

                                <!-- Categories Menu -->
                                <% if can? :index, Category %>
                                    <li>
                                        <%= link_to categories_path  do%>
                                            <i class="icon icon-list"></i>
                                            <%=t('categories.index.title')%>
                                        <% end %>
                                    </li>
                                <% end %>

                                <!-- All Pages Links -->
                                <% if can? :see, :all_pages %>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="icon icon-sitemap"></i>
                                        <%= t('titles.site_pages')%>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><%=link_to t('titles.authenticate_voter'), authenticate_voter_path%></li>
                                        <li class="divider"></li>
                                        <li><%=link_to t('titles.nomination'), new_nomination_path%></li>
                                        <li class="divider"></li>
                                        <li><%=link_to t('titles.public_vote'), public_vote_path%></li>
                                    </ul>
                                </li>
                                <% end %>

                                <!-- Users Menu -->
                                <% if can? :index, User %>
                                    <li>
                                        <%= link_to users_path  do%>
                                            <i class="icon icon-group"></i>
                                            <%=t('titles.users')%>
                                        <% end %>
                                    </li>
                                <% end %>

                                <!-- Mi Acount Menu -->
                                
                                <% if current_user.role? :admin%>
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="icon icon-user"></i>
                                        <%=current_user.email%>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><%=link_to t('titles.my_account'), edit_user_path(current_user)%></li>
                                        <li class="divider"></li>
                                        <li><%=link_to t('actions.sign_out'), destroy_user_session_path, method: :delete%></li>
                                    </ul>
                                </li>
                                <% else %>
                                    <li>
                                        <%= link_to root_path  do%>
                                            <i class="icon icon-user"></i>
                                            <%= current_user.email %>
                                        <% end %>
                                    </li>
                                <% end %>
                            <% end %>
                            
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="span12">
                    <%= bootstrap_flash %>
                    <%= yield %>
                </div>
            </div><!--/row-->

            <footer>
                <p>&copy; <%= t('titles.footer')%></p>
            </footer>
        </div> <!-- /container -->

        <!-- Javascripts
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <%= javascript_include_tag "application" %>

    </body>
</html>
