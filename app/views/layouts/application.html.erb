<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= content_for?(:title) ? yield(:title) : t('titles.app') %></title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag "application", :media => "all" %>
    </head>

<!--summary_records_path
    records_path
    services_path -->
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="<%= root_path%>">HOLA</a>
                    <div class="container nav-collapse">
                        <ul class="nav pull-right">

                            <% if user_signed_in? %>

                                <!-- Contests Menu -->
                                <% if 1 == 1 %>
                                    <li>
                                        <%= link_to root_path  do%>
                                            <i class="icon icon-flag-checkered"></i>
                                            <%=t('contests.index.title')%>
                                        <% end %>
                                    </li>
                                <% end %>

                                <!-- Categories Menu -->
                                <% if 1 == 1 %>
                                    <li>
                                        <%= link_to root_path  do%>
                                            <i class="icon icon-list"></i>
                                            <%=t('categories.index.title')%>
                                        <% end %>
                                    </li>
                                <% end %>


                                <!-- Mi Acount Menu -->
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="icon icon-user"></i>
                                        <%=current_user.email%>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><%=link_to t('titles.my_account'), edit_user_path(current_user)%></li>
                                        <li class="divider"></li>
                                        <li><%=link_to t('actions.sign_out'), destroy_user_session_path, method: :delete%></li>
                                    </ul>
                                </li>
                            <% end %>
                            
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="span12">
                    <%= bootstrap_flash %>
                    <%= yield %>
                </div>
            </div><!--/row-->

            <footer>
                <p>&copy; <%= t('titles.footer')%></p>
            </footer>
        </div> <!-- /container -->

        <!-- Javascripts
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <%= javascript_include_tag "application" %>

    </body>
</html>
